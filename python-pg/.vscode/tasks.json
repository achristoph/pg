  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsnode",
      "type": "shell",
      "command": "ts-node ${file}",
      "presentation": {
        "echo": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "node",
      "type": "shell",
      "command": "node ${file}",
      "presentation": {
        "echo": false,
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "python",
      "type": "shell",
      "command": "python3 ${file}",
      "presentation": {
        "echo": false,
        "panel": "dedicated",
        "clear": true
      }
    }
  ]
}
